.box
  .page-header
    %h1 Forgot your password?
  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :class => "form-horizontal" }) do |f|
    = f.error_notification
    = f.input :email
    .form-actions
      = f.button :submit, "Send me reset password instructions"

  %hr
  = render :partial => "devise/shared/links"
