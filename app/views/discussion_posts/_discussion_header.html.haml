.entry
  .heading
    %h3
      %a{:href => discussion_post_path(post)}
        = post.title
      - if post.draft
        %span.label.label-warning draft
    %h4
      = link_to_discussion_post_author( post )
      &nbsp;
      %span.comments-link= link_to pluralize(post.comments.size, 'comment'), discussion_post_path(post) + "#comments"
  .clearfix
