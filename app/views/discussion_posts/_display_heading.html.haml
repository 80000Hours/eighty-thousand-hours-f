.entry
  .heading
    %h3
      %a{:href => discussion_post_path(post)}
        = post.title
      - if post.draft
        %span.label.label-warning Draft post (not publicly visible)

    %h4
      %span.date
        by
      = link_to post.user.name, post.user
      %span.date
        on
        = format_date( post.created_at )
      &nbsp;
      %span.comments-link= link_to pluralize(post.comments.size, 'comment'), discussion_post_path(post) + "#comments"
  .clearfix
