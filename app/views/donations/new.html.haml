.row
  .span2
    .box.sidebar
      = render :partial => "/shared/charity_donation_member_sidebar"

  .span8
    .box.left-border
      .page-header
        %h1 Make a donation
      %p
        Add details of a charity donation to your 80,000 Hours profile by using the form below.
      %p
        For accountability we need you to upload a PDF donation receipt, or to forward an email receipt to us.

      - if @donation.errors.any?
        .alert.alert-error
          <a class="close" data-dismiss="alert">Ã—</a>
          %h4.alert-heading 
            = pluralize(@donation.errors.count, "error")
            prohibited this donation from being processed!
          %ul
            - @donation.errors.reverse_each do |field,msg|
              %li
                = msg

      = simple_form_for @donation, :html => { :class => 'form-horizontal' }, :defaults=>{:input_html=>{:class=>'span4'}} do |f|
        = field_set_tag 'Donation details' do
          = f.association :charity, :required => true, :hint => "charity not listed? #{link_to "add it here", new_charity_path }".html_safe
          = f.input :amount, :required => true
        = field_set_tag 'Accountability' do
          = f.input :receipt, :hint => "PDF donation receipt from charity"
          %p
            %strong
              Note:
            Instead of uploading a receipt, you can submit this form and then forward a donation receipt to <a href="mailto:donations@80000hours.org">donations@80000hours.org</a>. Please include your name in the email subject line.

        %hr
        .center
          = f.button :submit, "Submit donation", :class=> "btn btn-large"
