.row
  .span12
    .row
      .span3
        .box.sidebar
          %h2 Public profile
          %p
            By creating a public profile, you can help inspire new people to join 80k.
            Seeing example members is a really effective way to persuade others to join.
            You can also make yourself known to our community, which might lead to
            connections with other effect altruists.

          %h2 Markdown
          %p All the text fields can be formatted using the <a href="http://daringfireball.net/projects/markdown/syntax">Markdown syntax</a>. For example:
          %p **bold text** == <strong>bold text</strong>
          %p _italic text_ == <em>italic text</em>
          %p [a link](http://80000hours.org/) == <a href="http://80000hours.org">a link</a>

      .span9
        .box.left-border
          .page-header
            %h1= current_user.name
          = simple_form_for(current_user, url: user_eighty_thousand_hours_profile_url(current_user, current_user.eighty_thousand_hours_profile),
                                          html: { class: 'form-horizontal' },
                                          defaults: { input_html: { class: 'span4' } }  ) do |f|
            = f.fields_for :eighty_thousand_hours_profile, defaults: { input_html: { class: 'span4' } } do |ep|
              = field_set_tag "Public profile fields: will be visible at 80000hours.org/members" do
                = f.input :location
                = ep.input :organisation, label: "Your organization", :placeholder => "i.e. your current company or university"
                = ep.input :background,   label: "What is your background and what are your interests?", :input_html => {:rows=>'10'} 
                = ep.input :inspiration,  label: "What inspired you to join 80,000 Hours, and how has discovering 80,000 Hours changed your career decisions?", :input_html => {:rows=>'10'} 
                = ep.input :occupation,   label: "What do you currently do?", :input_html => {:rows=>'10'} 
                = ep.input :career_plans, label: "What are your plans for a high impact ethical career?", :input_html => {:rows=>'10'} 

                %label What will be your main method(s) of doing good?
                .check-group
                  = ep.input :doing_good_inspiring,       label: "Inspiring"
                  = ep.input :doing_good_improving,       label: "Improving"
                  = ep.input :doing_good_philanthropy,    label: "Philanthropy"
                  = ep.input :doing_good_prophilanthropy, label: "Professional philanthropy"
                  = ep.input :doing_good_innovating,      label: "Innovating"
                  = ep.input :doing_good_research,        label: "Research"

                = ep.input :organisation_role, label: "What is your role in the 80,000 Hours team?", :input_html => {:rows=>'5'} 
                = ep.input :interesting_fact,  label: "Interesting fact (optional)", :input_html => {:rows=>'5'} 
                = f.input :external_website,   label: "Personal website (optional)", :hint => "full URL e.g. http://www.joebloggs.com/"
                = f.input :external_twitter,   label: "Twitter page (optional)", :hint => "full URL e.g. http://twitter.com/JoeBloggs"
                = f.input :external_facebook,  label: "Facebook page (optional)", :hint => "full URL e.g. http://www.facebook.com/JoeBloggs"
                = f.input :external_linkedin,  label: "LinkedIn page (optional)", :hint => "full URL e.g. http://www.linkedin.com/in/JoeBloggs"

                = f.label "Profile picture"
                - if current_user.avatar?
                  = link_to image_tag(current_user.avatar.url(:small), :class=>"shadow", :style=>"margin-left:20px;"), current_user.avatar.url
                - else
                  = image_tag("profiles/avatar_default_96x96.png", :class=>"shadow")
                = f.input :avatar, :label => "Change photo"

            %hr

            = field_set_tag "Private profile fields: only visible to other 80,000 Hours members" do
              = f.fields_for :eighty_thousand_hours_profile, :defaults=>{:input_html=>{:class=>'span4'}}  do |ep|
                = ep.input :skills_knowledge_share,
                           label: "What skills and knowledge would you be willing to share with other 80k members?",
                           placeholder: "this will not be publicy visible",
                           input_html: { rows: '10' } 

                = ep.input :skills_knowledge_learn,
                           label: "What skills and knowledge would you like to gain from other 80k members?",
                           placeholder: "this will not be publicy visible",
                           input_html: { rows: '10' } 

            %hr
            .center
              = f.button :submit, "Save profile", class: 'btn btn-success btn-large'
              = link_to "Cancel", user_path(current_user), class: 'btn btn-large'
