-# profile is passed as a local var
- user = profile.user
.eighty-thousand-hours-profile-condensed-2{ id: "#{user.id}" }
  .avatar
    = link_to image_tag(user.avatar.url(:small)), "/members/#{user.slug}", class: "profile-link"
  .body
    .name
      = link_to user.name, "/members/#{user.slug}", class: "profile-link"
    .content
      - if profile.current_position
        .position
          %p= truncate(profile.current_position, length: 30)
      - if profile.organisation
        - if profile.current_position
          .organisation
            %p= " at " + truncate(profile.organisation, length: 30)
        - else
          .organisation
            %p= truncate(profile.organisation, length: 40)