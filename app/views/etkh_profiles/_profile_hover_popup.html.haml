-# user passed in as local var
- profile = user.etkh_profile
#profile-hover
  .row-fluid
    .span4
      .avatar
        = link_to image_tag(user.avatar.url(:small)), "/members/#{user.slug}"
    .span8
      .body
        .name
          = link_to user.name, "/members/#{user.slug}"
        .content
          %p.location 
            = user.location
          - if profile
            %p.position
              = profile.current_position
            %p.organisation
              = profile.organisation
            %p.industry
              = profile.career_sector

:javascript
  $(document).ready( function() {
    // set image dimensions to avoid stretching
    // short delay to allow images to load
    setTimeout( function() {
      $("#profile-hover").find(".avatar").find("img").each( function() {
        var img = new Image();
        img.src = $(this).attr('src');

        if (img.width > img.height)
        {
          $(this).css('height', '100%');
        }
        else
        {
          $(this).css('width', '100%');
        }
      });
    }, 20);
  });