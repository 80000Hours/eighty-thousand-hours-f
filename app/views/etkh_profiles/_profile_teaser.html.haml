- profile = user.etkh_profile
.profile-teaser
  .row-fluid
    .span2
      .avatar
        = link_to (image_tag user.avatar(:medium)), etkh_profile_path(user)
    
    .span10
      .heading
        .name
          = link_to user.name, etkh_profile_path(user)
        .location
          %p= user.location
        .organisation
          %p= profile.organisation
        %hr

      .body
        .row-fluid
          .span3
            .labels
              - if !profile.current_position.nil? && !profile.current_position.empty?
                .position
                  %p Current position
              .background
                %p Background
              - if profile.profile_option_activities.any?
                .activities
                  %p Activities
              -# if profile.profile_option_causes.any?
                -#.causes-label
                  -#%p Causes

          .span9
            .info
              - if !profile.current_position.nil? && !profile.current_position.empty?
                .position
                  %p= profile.current_position
              .background
                %p= markdown (profile.get_background_snippet(100, 150) + "... [read more](#{etkh_profile_path(user)})")
              - if profile.profile_option_activities.any?
                .activities
                  - profile.profile_option_activities.limit(4).each_with_index do |activity, index|
                    - if index < 3
                      = activity.title + ", "
                    - else
                      = activity.title
