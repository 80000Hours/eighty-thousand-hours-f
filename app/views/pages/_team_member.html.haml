- user = User.find_by_slug(slug)
- profile_path = "/members/#{slug}"
.member
  .row
    .span2
      .avatar
        = link_to image_tag(user.avatar(:medium)), profile_path
    .span8
      .text
        %h2.title= link_to user.name, profile_path
        - if position && !position.empty?
          %h3.position= position
        %p.description= description