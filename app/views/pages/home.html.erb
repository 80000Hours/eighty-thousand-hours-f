<%
  members_html = "We have #{@total_members} members worldwide, you can see them all on <a href='/members'>the member list</a>. Some example member profiles:<br/>" 
  @members.each do |m|
    if m.avatar
      # note: gets processed by markdown so can't have leading spaces
      members_html += "
#{link_to image_tag(m.avatar.url(:small), :class=>"fp-profile-image"),"/members/#{m.slug}"}"
    end
  end
%>

<%
  careers_html = "" 
  @careers.each do |c|
    # note: gets processed by markdown so can't have leading spaces
    careers_html += "
#{link_to image_tag( "career_icons/#{c}.jpg", :class=>"fp-profile-image", :alt=>"#{c.humanize}"),"/career-profiles##{c.gsub(/_/,'-')}"}"
  end
%>

<%
  posts = Post.published.limit(4)
  latest_blog_html = "<p><h2>Latest blog posts:</h2></p>"
  posts.each do |p|
    # note: gets processed by markdown so can't have leading spaces
    latest_blog_html += "
<p>
<strong>#{p.created_at.strftime('%B %d, %Y')}</strong>
<br/>
<a class='btn btn-small right' href='#{post_path p}'>Read more...</a>
<a href='#{post_path p}'>#{p.title}</a>
<br/>by #{p.author}
</p>
<hr/>
"
  end
%>

<%
  endorsement = Endorsement.all.shuffle.first
  # note: gets processed by markdown so can't have leading spaces
  endorsement_html = endorsement.body+"

----

"+endorsement.author+"
<br/>
"+endorsement.position+"

[More endorsements...](/endorsements)"
%>

<% content = @page.body %>
<% content = content.gsub(/\|\*MEMBERS\*\|/, members_html) %>
<% content = content.gsub(/\|\*CAREERS\*\|/, careers_html) %>
<% content = content.gsub(/\|\*LATEST_BLOG\*\|/, latest_blog_html) %>
<% content = content.gsub(/\|\*ENDORSEMENT\*\|/, endorsement_html) %>
<%= markdown content %>

