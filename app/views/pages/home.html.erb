<%
  members_html = "
We have #{@total_members} members worldwide, you can see them all on <a href='/members'>the member list</a>.
<ul class='thumbnails'>"
  @members.each do |m|
    if m.avatar
      # note: gets processed by markdown so can't have leading spaces
      members_html += "
<li class='span1'>
#{link_to image_tag(m.avatar.url(:small)),"/members/#{m.slug}", :class=>"thumbnail"}
</li>"
    end
  end
  members_html += "
</ul>"
%>

<%
  careers_html = "
<ul class='thumbnails'>"
  @careers.each do |c|
    # note: gets processed by markdown so can't have leading spaces
    careers_html += "
<li class='span1'>
#{link_to image_tag( "career_icons/#{c}.jpg", :alt=>"#{c.humanize}"),"/career-profiles##{c.gsub(/_/,'-')}", :class => 'thumbnail'}
</li>"
  end
  careers_html += "
</ul>"
%>

<% donations_html = render('donations/thermometer.html.haml') %>

<% 
  latest_html = ""
  latest_html += "#{ render "posts/latest_posts" }"
  latest_html += "#{ render "posts/latest_comments" }"
  latest_html += "#{ render "etkh_profiles/latest_profiles"}"
  latest_html += "#{ render "donations/latest_donations"}"
%>

<% content = @page.body %>
<% content = content.gsub(/\|\*MEMBERS\*\|/, members_html) %>
<% content = content.gsub(/\|\*CAREERS\*\|/, careers_html) %>
<% content = content.gsub(/\|\*LATEST\*\|/,  latest_html)  %>
<% content = content.gsub(/\|\*DONATIONS\*\|/, donations_html)  %>
<%= markdown content %>
