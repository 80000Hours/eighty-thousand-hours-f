- if can? :manage, Page 
  .box
    %h1 All pages
    
    %table
      %tr
        %th Title
        %th URL
        %th Body
        %th
        %th
        %th
    
      - @pages.each do |page|
        %tr
          %td= page.title
          %td= page.slug
          %td= page.body[0..20] + '...'
          %td= link_to 'Show', page
          %td= link_to 'Edit', edit_page_path(page)
          %td= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete
    
    %br
    .admin-button
      = link_to 'New page', new_page_path
- else
  .box
    %h1 Not authorized...
    %p Sorry, you can't view this page
