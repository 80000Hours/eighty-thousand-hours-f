.box
  .entry
    %h3
      %a{:href => post_path(post)}
        = post.title
    %h4
      = post.author + ", " + post.created_at.strftime("%B %d, %Y")

    %hr

    .content
      - if teaser
        = markdown post.get_teaser

        .read-more
          %a{:href => post_path(post), :class=>"btn"}
            Read more
      - else
        = markdown post.body

    .attribution= markdown post.attribution if post.attribution 

    %p
      more posts by 
      =link_to post.author, { :action => :author, :id => post.author }

      = render :partial => "post_tags", :locals => { :post => post, :div_title => "tags:" }

      - if !teaser
        = render :partial => "rss"

        .fblike
          <fb:like href="#{post_url(post)}" send="false" width="450" show_faces="false"></fb:like>

    .comments
      - if teaser
        %a{"href" => "#{post_url(post)}#disqus_thread",
           "data-disqus-identifier" => "blog-post-#{post.id}" }
        %div= render :partial => "disqus_count", :locals => { :post_id => post.id, :post_title => post.title }
      - else
        #disqus_thread
          = render :partial => "disqus_embed", :locals => { :post_id => @post.id, :post_title => @post.title }


    - if !teaser
      .center
        = link_to 'All blog posts', posts_path, :class=>"btn btn-large"

