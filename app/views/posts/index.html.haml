- @posts.each do |post|
  %div.box.blog-entry
    %div{:id => "#{post.title.downcase.gsub(/ /,'-')}"}
      %a{:href => post_path(post)}
        %h1= post.title
    %h2= post.created_at.strftime("%B %d, %Y")
    = markdown post.teaser
    .attribution= markdown post.author

    = link_to 'Comments', post_url(post, :anchor => "disqus_thread")
%br
%br

%div= render :partial => "disqus_count"
