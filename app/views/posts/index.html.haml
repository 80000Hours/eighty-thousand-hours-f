.blog
  .grid_5.sidebar
    .box
      %h2 Latest blog posts:
      - @posts[0..3].each do |post|
        .title= post.title
        .date= post.created_at.strftime("%B %d, %Y")

- @posts.each do |post|
  .grid_7
    .box.blog-entry
      %div{:id => "#{post.title.downcase.gsub(/ /,'-')}"}
        %a{:href => post_path(post)}
          .title= post.title
      .date= post.created_at.strftime("%B %d, %Y")
      = markdown post.get_teaser

      .read-more
        %a{:href => post_path(post)}
          Read more...

      .attribution= markdown post.author

      %a{"href" => "#{post_url(post)}#disqus_thread",
         "data-disqus-identifier" => "blog-post-#{post.id}" }
      %div= render :partial => "disqus_count", :locals => { :post_id => post.id }

      <fb:like href="#{post_url(post)}" send="false" width="450" show_faces="false"></fb:like>
%br
