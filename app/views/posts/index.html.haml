.blog
  .row
    .span3
      .sidebar.tight
        = render :partial => "rss"
        %hr
        = render :partial => "popular_posts"
        %hr
        = render :partial => "recommended_posts"
        %hr
        = render :partial => "authors"
        %hr
        = render :partial => "tag_cloud"
 
    .span7
      .box.left-border
        - if @heading
          .box
            .page-header
              %h1
                = @heading
        - @posts.each do |post|
          = render :partial => 'display_post', :locals => { :post => post, :teaser => true }

        - if will_paginate @posts
          .box.tight
            .center
              = page_navigation_links @posts
 
