.blog
  .row
    .span3
      .box.sidebar
        = render :partial => "rss"
        %hr
        = render :partial => "popular_posts"
        %hr
        = render :partial => "recommended_posts"
        %hr
        = render :partial => "authors"
        %hr
        = render :partial => "tag_cloud"
 
    .span7
      .box.left-border
        - if @heading
          .page-header
            %h1
              = @heading
        - @posts.each do |post|
          - if @just_headings
            = render :partial => 'display_heading',
                     :locals => { :post => post }
          - else
            = render :partial => 'display_teaser',
                     :locals => { :post => post }

        - if will_paginate @posts
          .box.tight
            .center
              = page_navigation_links @posts
