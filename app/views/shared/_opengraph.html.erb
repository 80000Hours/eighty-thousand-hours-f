    <!-- for facebook open graph -->
    <meta property="og:title" content="<%= page_title(false) %>"/>
    <% if @og_type %>
      <meta property="og:type" content="<%= @og_type %>"/>
    <% else %>
      <meta property="og:type" content="non_profit"/>
    <% end %>
    <meta property="og:url" content="<%= request.url %>"/>
    <!--<meta property="og:image" content="http://80000hours.org/assets/opengraph/logo.png"/>-->
    <meta property="og:site_name" content="80,000 Hours" />
    <meta property="fb:admins" content="36804805"/>
    <% if @og_desc %>
      <meta property="og:description" content="<%= strip_tags(strip_links(sanitize(markdown @og_desc))) %>"/>
    <% else %>
      <meta property="og:description" content="80,000 Hours is an organisation which supports and guides people who are pursuing careers which will allow them to do the most good in the world."/>
    <% end %>
