<div id="interaction">
  <div class="user-login">
  <% if user_signed_in? %>
    <%= link_to current_user.name, user_path(current_user) %>
    (<%= link_to "Edit Profile", "/accounts/edit" %>)
    | <%= link_to "Logout", destroy_user_session_path, :method => :delete %>
