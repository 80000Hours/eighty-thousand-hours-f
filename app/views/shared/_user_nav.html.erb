<div id="interaction">
  <div class="user-login">
  <% if user_signed_in? %>
    <%= link_to current_user.name, "/accounts/edit" %>
    (<%= link_to "Logout", destroy_user_session_path, :method => :delete %>)
  <% else %>
    <%= link_to "Login", new_user_session_path %>
  <% end %>
  </div>

  <div class="social">
    <%= link_to image_tag( "social/facebook.png", :class => "social_image" ),   "https://www.facebook.com/pages/80000-Hours/196210360460710" %>
    <%= link_to image_tag( "social/twitter.png", :class => "social_image" ),    "https://twitter.com/80000Hours" %>
    <%= link_to image_tag( "social/googleplus.png", :class => "social_image" ), "https://plus.google.com/u/0/107618575632315707147" %>
  </div>
</div>
