.container.navbar-container
  .row
    .span12
      .navbar.navbar-top
        .navbar-inner
          / .btn-navbar is used as the toggle for collapsed navbar content
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          .nav-collapse
            %ul.nav.pull-right
              %form.navbar-search{:action => "/search", :method => "get"}
                %input.search-query{:name => "q", :placeholder => "Search", :type => "text"}/
              - if user_signed_in?
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    %span.username= current_user.name
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to "Account settings", edit_user_registration_path
                    - if current_user.eighty_thousand_hours_member?
                      %li= link_to "Edit profile", edit_user_etkh_profile_path(current_user, current_user.etkh_profile)
                      %li= link_to "View profile", etkh_profile_path(current_user)
                      %li= link_to "Donations", donations_path
                    - if can? :access, :admin
                      %li= link_to "Admin", admin_dashboard_path
                    %li.divider
                    %li= link_to "Logout", destroy_user_session_path, :method => :delete
              - else
                %li= link_to "Login", new_user_session_path
                %li= link_to "Sign up", new_user_registration_path
              %li= link_to "Contact", "/contact-us"
