<div class="box">
  <div class="center">
    <h1><%= @all ? "Our members" : "Some of our members" %></h1></div>
  <% @users.each do |user| %>
    <%= render :partial => '/shared/member_condensed', :locals => { :member => user.member } %>
  <% end %>

  <% if !@all %>
    <div class="center">
      <%= button_link 'View all members', '/members/all' %>
    </div>
  <% end %>
</div>

<div class="box">
  <div class="center">
  <%= button_link 'Inspired? Interested in becoming a member?', '/join' %>
  </div>
</div>
